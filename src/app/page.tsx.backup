    if (!results || !domain) return;

    try {
      setLoading(true);
      const response = await fetch('/api/pdf', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          domain,
          mode: results.mode,
          options: {
            includeDetails: results.mode === 'complete',
            includeRecommendations: true
          }
        }),
      });

